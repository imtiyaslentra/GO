-- GUI loop
RunService.RenderStepped:Connect(function()
    if getgenv().auto_parry_Enabled then
        -- Logika untuk Auto Parry
        parry() -- Pastikan Anda membuat fungsi parry() yang sesuai
    end
    
    if getgenv().auto_spam_Enabled then
        -- Logika untuk Auto Spam
        attack() -- Pastikan Anda membuat fungsi attack() yang sesuai
    end
    
    if getgenv().aura_Enabled then
        -- Logika untuk aura yang aktif
    end
    if getgenv().hit_effect_Enabled then
        -- Logika untuk efek hit yang aktif
    end
    if getgenv().night_mode_Enabled then
        -- Logika untuk mode malam yang aktif
    end
    if getgenv().self_effect_Enabled then
        -- Logika untuk efek diri yang aktif
    end
    
    -- Update closest entity
    closest_Entity = getClosestEntity(camera.CFrame.Position)
end)

function parry()
    -- Tambahkan logika parry di sini
    print("Parry executed!") -- Ubah dengan logika yang sesuai
end

function attack()
    -- Tambahkan logika serangan di sini
    print("Attack executed!") -- Ubah dengan logika yang sesuai
end
